{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ESNext",
    "outDir": "build",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "paths": {
      "@src/*": ["src/*"],
      "@fixtures/*": ["fixtures/*"],
      "@test_data/*": ["test_data/*"]
    }
  },
  "exclude": ["node_modules"]
}
